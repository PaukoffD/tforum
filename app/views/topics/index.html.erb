<table class="table table-striped table-hover ">

 <thead>
    <tr>
	<th width="60%">Topic Title</th>
    <th width="10%">Replies</th>
    <th width="30%">Last Post</th>
     </tr>
  </thead>
  
    <tbody>
  <% for topic in @topics %>
    <tr>
      <td><%= link_to h(topic.subject), topic_path(topic.id) %>
      <td><%= topic.posts.count-1  %></td>
      <td><%= @post.text  %></td>
    </tr>
  <% end %>
   </tbody>
</table>


 
<p><%= link_to "New Topic", new_forum_topic_path(topic.forum_id) %></p>
