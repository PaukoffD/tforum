
<h1>Listing Forums</h1>

<table class="table table-striped table-hover cellspacing='0'">
  <thead>
    <tr>
	  <th width="50%">Forum</th>
	  <th width="10%">Topics</th>
      <th width="40%">Last Post</th>
     </tr>
  </thead>

  
  
  
  <tbody>
  <tr class="info">
    <% @forums.each do |forum| %>
      <tr>
        <tr class="active">

		<td><h4><%= link_to h(forum.name), forum_path(forum.id) %> </h4>

        <%=h forum.description %></td>
		
		<td class="right">
		<h4><span class="badge"><%= forum.topics.count %></span></a> topics</h4>
		</td>
		
		<td class="right"><% if forum.most_recent_post %>
		<%= distance_of_time_in_words_to_now @topic.last_post_at %> ago<% else %>no posts<% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Forum', new_forum_path, :class => "btn btn-primary" %>

