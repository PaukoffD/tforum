
<h1>DUMMY RUBY FORUM</h1>

<table class="table table-striped table-hover cellspacing='0'">
  <thead>
    <tr>
	  <th width="30%">Forum</th>
	  <th width="49%">Post</th>
	  <th width="7%">Topics</th>
      <th width="7%">Replies</th>
	  <th width="7%">Views</th>
     </tr>
  </thead>

  
  
  
  <tbody>
  <tr class="info">
    <% @forums.each do |forum| %>
      <tr>
        <tr class="active">

		<td><h4><%= link_to h(forum.name), forum_path(forum.id) %> </h4>

        <%=h forum.description %></td>
		
		<td class="right"><% if forum.last_topic %>
		<h4><%= link_to h(forum.last_topic.subject), forum_topics_path(@topic.id) %> </h4>
		<%= distance_of_time_in_words_to_now forum.last_topic.last_post_at %> ago<% else %>no posts<% end %></td>
		
		<td class="right">
		<h4><span class="badge"><%= forum.topics.count %></span></a> topics</h4>
		</td>
		
		<td class="right">
		<h4><span class="badge"><%= @topic.posts.count %></span></a> views</h4>
		</td>
		

      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Forum', new_forum_path, :class => "btn btn-primary" %>

